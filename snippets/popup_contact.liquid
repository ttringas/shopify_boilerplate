<a href="#contact_btn" class="side_btn contact_btn">CONTACT US</a>
<div class="modal hide" id="contact_form">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">x</a>
    <h3>Contact Us</h3>
  </div>
  <div class="modal-body">
    <p>Send us your thoughts, comments and suggestions</p>
    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <p class="success-msg">Thanks for contacting us! We'll get back to you as soon as possible.</p>
      {% endif %}
      {% if form.errors %}
        <p class="error-msg">
        <ul class="error-list">
        {% for field in form.errors %}
          <li>{{ field }} - {{ form.errors.messages[field] }}</li>
        {% endfor %}
        </ul>
        </p>
      {% endif %} 
      <ul id="contact-form">
        <li class="clearfix type-text">
          <label for="name">Name</label>
          <input type="text" id="name" name="contact[email]" />
        </li> 
        <li class="clearfix type-text">
          <label for="email">Email</label>
          <input type="email" id="email" class="email" name="contact[email]" />
        </li>   
        <li class="clearfix type-textarea">
          <label for="message">Message</label>
          <textarea id="message" name="contact[body]"></textarea>
        </li>
    <div class="options">
        <li class="clearfix type-submit">
          <input type="submit" class="submit btn contact_submit" value="Send" />
        </li>
      </ul>
    {% endform %}  
    </div>    
  </div>
</div><!-- #popup_to_adaptor -->